{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2020",
    "removeComments": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
  },
  "baseUrl": "./",
  "paths": { "*": ["src/web_modules/.types/*"] },
  "skipLibCheck": true,
  "include": ["src/ts"],
  "exclude": [
    "node_modules"
  ]
}